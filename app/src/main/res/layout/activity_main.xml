<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.binhmai.goalproject.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_points_button_label"
        android:id="@+id/points_button"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/event_listView"
        android:layout_alignEnd="@+id/event_listView"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_listView"
        android:layout_below="@+id/points_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <TextView
        android:text="@string/points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:id="@+id/points_label"
        android:layout_alignBaseline="@+id/points_button"
        android:layout_alignBottom="@+id/points_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/points_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points_count"
        android:layout_alignBaseline="@+id/points_label"
        android:layout_alignBottom="@+id/points_label"
        android:layout_toRightOf="@+id/points_label"
        android:layout_toEndOf="@+id/points_label"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

</RelativeLayout>



