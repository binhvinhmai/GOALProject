<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/eventCodeTextField"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/getpointsprompttext"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/getpointsprompt"
        android:id="@+id/getpointsprompttext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_points_button_label"
        android:id="@+id/gp_points_button"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/eventCodeTextField"
        android:layout_centerHorizontal="true" />

</RelativeLayout>